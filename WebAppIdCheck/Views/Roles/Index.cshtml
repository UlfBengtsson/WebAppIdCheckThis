@model List<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>Roles list</h1>


<a class="btn btn-success" asp-action="Create">Create new role</a>

<table>
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Action</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.NormalizedName</td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>&nbsp;
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>